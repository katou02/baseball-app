<html>
<head>
  <title> Sample boad</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>

<body>
<header class="header">
  <h1>試合記事</h1>
  <%= link_to "投稿する", "/tweets/new" ,class: "send_btn"%>
  <div class="image">
    <img src="https://marcoro.jp/large/l_yakyuu_004.png" width="100" height="100">
  </div>
</header>
<div class="comment">
  <% @tweets.each do |tweet|%>
  <div class="comment-list">
    <div class="title">
    <%= link_to "#{tweet.title}","/tweets/#{tweet.id}",class: "title"%>
    </div>
    <div class="sub-title">
      <%= tweet.title_info %>
    </div>
  </div>
   <% end %>
</div>
<%= paginate(@tweets)%>
</div>
</body>
</html>