<% @tweets.each do |tweet|%>
  <%= link_to tweet do %>
  <div class="comment">
    <div class="comment-list">
      <div class="title">
      <%= tweet.school_a.name %>
      <%= tweet.school_b.name %>
      </div>
      <div class="sub-title">
        <%= tweet.title_info %>
      </div>
      <div class="name">
        <span>投稿者</span>
        <%= tweet.user.nickname %>
      </div>
      <div class="tweets_at">
        <%= tweet.created_at.strftime("%Y年%m月%d日 %H時%M分")%>
      </div>
    </div>
  </div>
  <% end %>
<% end %>