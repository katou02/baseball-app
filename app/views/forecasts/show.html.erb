<div class="forecast-show_content">
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
  <div class="choose-btn pt-2">
    <% if current_user.id == @forecast.user_id || current_user.admin? %>
      <%= link_to "記事を削除する","/forecasts/#{@forecast.id}",method: :delete,data: { confirm: '削除しますか？' },class: "delete-article"%>
      <%= link_to "記事を編集する","/forecasts/#{@forecast.id}/edit",method: :get,class: "edit-article" %>
    <% end %>
      <%= link_to "予想ページへ戻る",forecasts_path,class: "return-btn",data: {"turbolinks" => false} %>
  </div>
  <div class="user_name">
    <h4>投稿者 <%= link_to "#{@forecast.user.nickname}","/mypages/#{@forecast.user_id}"%></h4>
  </div>
  <div class="content-fcs_show">
    <div class="text-format text-danger mt-5 mb-5">
      <i class="fas fa-fire"></i>
      試合予想<br><br>
      <%= @forecast.tournament.name%>
    </div>
    <div class="school-fcs">
      <div class="win-school text-danger">
        <p>勝利予想<p>
        <br>
        <div class="win"><%= @forecast.win_school.name %></div>
      </div>
      <div class="lose-school text-info">
        <p>敗退予想<p>
        <br>
        <div class="lose"><%= @forecast.lose_school.name %></div>
      </div>
    </div>
      <div hidden class="win-rate"><%= @forecast.probability%></div>
      <div class="Pie mt-5" style="width:900px; height:500px;">
        <canvas id="PieChart"></canvas>
      </div>
      <%= javascript_pack_tag 'forecast' %>
    <div class="show-text">
      <%= simple_format(@forecast.text)%>
    </div>
  </div>

    <div class="comment-content">
      <div class="comments">   
        <div class="text-format mt-5 mb-4 text-warning">
        <i class="fa fa-baseball-ball text-warning"></i>
          コメント
        </div>
        <% if @comments %>
          <% @comments.each do |comment| %>
            <p>
              <%= @num %>:
              <strong><%= comment.user.nickname %></strong>
                <div class="mt-3">
                  <%= simple_format(comment.text) %>
                </div>
                <% if user_signed_in? && current_user.id == comment.user_id || current_user.admin %>
                  <%= link_to '削除', "/forecasts/#{@forecast.id}/comment_forecasts/#{comment.id}", method: :delete,class: "comment_delete_button" %>
                <% end %>
                <div class="comment_at">
                  <%= comment.created_at.strftime("%Y年%m月%d日 %H時%M分")%>
                </div>
            </p>
            <%@num+=1%>
          <% end %>
        <% end %>
      </div>
      <div class="comment-form"> 
      <!-- ここからフォーム -->
      <% if current_user %>
        <%= form_with(model:[@forecast, @comment], method: :post) do |f| %>
          <textarea cols="30" name="text" placeholder="コメントを記述" rows="2"></textarea>
          <input type="submit" value="SENT" class="game_record">
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
