<%= render partial: "tweets/header"%>
<div class="mypage-content pt-3">
  <%= link_to "トップページへ戻る",root_path,class: "return-top ml-2" %>
  <% if @user.id == current_user.id  && @mypage.blank? %>
    <%= link_to "プロフィール作成",new_mypage_path,class: "edit-article" %>
  <% elsif @mypage.blank? %>
  <% elsif @user.id == current_user.id || current_user.admin %>
    <%= link_to "プロフィール編集",edit_mypage_path(@user),class: "edit-article" %>
  <% end %>
  <div class="myname mt-5">
    <h2><%= "#{@user.nickname}さんのプロフィール"%><h2>
  </div>
  <%= render "users/stats" %>
  <% if @mypage.present? %>
    <div class="myprof">
      <div class="residence">
        <p>住んでる場所</p>
        <br><%= @mypage.prefectures %> 
      </div>
      <div class="text-myname">
        <p>自己紹介</p>
        <br><%= @mypage.text %>
      </div>
      <div class="my-links">
          <%= link_to "投稿した試合記事","#{@mypage.user_id}/my_tweets",class: "my-link" %>
          <%= link_to "投稿した戦力分析","#{@mypage.user_id}/my_analyses",class: "my-link" %>
          <%= link_to "投稿した試合予想","#{@mypage.user_id}/my_forecasts",class: "my-link" %>
          <%= link_to "いいねした試合記事","/users/#{@mypage.user_id}/likes",class: "my-link"%>
      </div>
    </div>
  <% end %>
  <% if @user.id != current_user.id %>
    <% if @isRoom == true %>
      <% if current_user.following?(@user) %>
      <div class="dm">
        <%= link_to 'ダイレクトメッセージをする', room_path(@roomId) %>
      </div>
      <% end %>
    <% else %>
      <%= form_for @room do |f| %>
        <%= fields_for @entry do |e|%>
          <% e.hidden_field :user_id, value: @user.id %>
        <% end %>
        <% if current_user.following?(@user) %>
          <%= f.submit "DMを開始する"%>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= render "users/follow_form" %>
</div>
  