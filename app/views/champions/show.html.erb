<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js">
</script>
<div class="champion-content">
  <div class="main-content-btn">
    <%= link_to "予想一覧へ戻る","/tournaments/#{@category.id}/watch_fcs",class: "return-top  ml-1", data: {"turbolinks" => false} %>
  </div>
  <div class="champion-title">
    <i class="fas fa-crown text-warning"></i>
    優勝予想
    <i class="fas fa-crown text-warning"></i>
  </div>
  <div class="text-center">
    <% if @my_champion.blank?%>
      <%= link_to new_champion_path(tournament_id: params[:id]),class: "btn btn-warning champ-btn" do %>
        優勝予想をする
      <% end %>
    <% else%>
      <%= link_to "投票を取り消す","/champions/#{@my_champion.tournament_id}",method: :delete,data: { confirm: '取り消しますか？' },class: "delete-btn"%>
      <p class="mt-4 mb-4"><%= "#{@my_champion.champion_school.name}に投票しています" %><p>
    <% end %>
  </div>
  <div class="text-format">
    <%= @category.name %>
  </div>
  <%# 大会別 %>
  <div class="title mt-5 mb-5">
    <% @category_parent_array.each do |tournament|%>
      <% unless current_page?("/champions/#{tournament.id}") %>
        <%# <div class="cp-tournamet mt-5 mb-5"> %>
          <%= link_to "/champions/#{tournament.id}",data: {"turbolinks" => false},class: "title-child text-white" do%>
            <i class="fa fa-baseball-ball text-white"></i>
            <%=tournament.name%>
          <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="text-format ">
    投票結果
  </div>
  <%# 投票結果 %>
  <%# <div class="reader">
    <div style="width:75%; height:75%;" ><canvas id="myBarChart"></canvas></div>
  </div> %>
  <h4 class="text-center mt-5">全投票</h4>
  <% @school.each do |school| %>
    <div class="school-cp mt-5">
      <i class="fas fa-baseball-ball text-white bg-primary"></i>
      <%= school.champion_school.name %>
      <%= "#{@num[0][@n][1]}票" %>
    </div>
    <% @n+=1%>
  <% end %>
  <%= javascript_pack_tag 'champion' %>
</div>
<%= javascript_pack_tag 'main'%>