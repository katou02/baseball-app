<%= link_to "記事一覧へ戻る",analyses_path,class: "return-btn d-inline-block mt-2"  %>
<%= form_with(url: search_analyses_path, local: true, method: :get, class: "search mt-5 mb-5") do |form| %>
  <%= form.text_field :keyword, placeholder: "記事を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<% @analyses.each do |analysis|%>
  <%= link_to analysis do %>
  <div class="analysis mt-5">
    <div class="school_ays-name">
      <%= analysis.school.name %>
    </div>
    <div class="analysis-image">
      <i class="fa fa-search"></i>
    </div>
    <div class="title_ays text-center">
      <%= analysis.title%>
    </div>
    <div class="name">
      <span>投稿者</span>
      <%= analysis.user.nickname %>
    </div>
    <div class="analyses_at">
      <%= analysis.created_at.strftime("%Y年%m月%d日 %H時%M分")%>
    </div>
  </div>
  <% end %>
<% end %>
<%= paginate @analyses%>